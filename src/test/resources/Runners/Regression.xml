<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OpenKart" parallel="tests" verbose="4">

	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<!-- <listener class-name="com.qa.Listeners.MyListenerUtiles"></listener>-->
	</listeners>

	<test thread-count="5" name="Login">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.LoginTest" />
		</classes>
	</test>

	<test thread-count="5" name="Account">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.AccountTest" />
		</classes>
	</test>

	<test thread-count="5" name="Product">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.ProductsTest" />
		</classes>
	</test>

	<test thread-count="5" name="ProductInfo">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.ProductInfoTest" />
		</classes>
	</test>

	<test thread-count="5" name="ShoppingKart">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.ShoppingKartTest" />
		</classes>
	</test>

	<test thread-count="5" name="checkout">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.CheckoutTest" />
		</classes>
	</test>


	<test thread-count="5" name="success">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.OrderSuccessTest" />
		</classes>
	</test>

	<test thread-count="5" name="Registeration">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.OpenKart.testCases.RegisterTest" />
		</classes>
	</test>
</suite> 
